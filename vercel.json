{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "memory": 3008,
      "maxDuration": 60,
      "regions": ["sfo1"]
    }
  },
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "/api" 
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html" 
    }
  ]
}
